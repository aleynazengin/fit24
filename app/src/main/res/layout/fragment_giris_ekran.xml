<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisEkran"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shutterstock_image__1_"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/login_icon" />

        <EditText
            android:id="@+id/editTextemail"
            android:layout_width="280dp"
            android:layout_gravity="center|center_vertical"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:background="#2503A9F4"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:text="berra@gmail.com"
            android:textColor="#090909"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextsifre"
            android:layout_width="280dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#2503A9F4"
            android:ems="10"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:text="123"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttongiris2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#BF03A9F4"
            android:text="Giriş Yap"
            android:textColor="#E7FAF8"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>